<div class="summary-card @(ShowProgress ? "" : "summary-card-centered")">
    <div class="summary-card-value">@Value</div>
    <div class="summary-card-label">@Label</div>
    @if (ShowProgress)
    {
        <div class="summary-card-progress">
            <div class="summary-progress-bar">
                <div class="summary-progress-fill" style="width: @Progress%"></div>
                @if (ExpectedProgress > 0)
                {
                    <div class="summary-progress-expected" style="left: @ExpectedProgress%"></div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired] public string Value { get; set; } = string.Empty;
    [Parameter, EditorRequired] public string Label { get; set; } = string.Empty;
    [Parameter] public bool ShowProgress { get; set; }
    [Parameter] public int Progress { get; set; }
    [Parameter] public int ExpectedProgress { get; set; }
}
