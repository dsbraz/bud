@code {
    [Inject]
    private Services.AuthState AuthState { get; set; } = default!;

    private string GetOrganizationsActiveClass()
    {
        var uri = Navigation.Uri;
        return uri.Contains("/organizations", StringComparison.OrdinalIgnoreCase)
            ? "active"
            : "";
    }

    private string GetPessoasActiveClass()
    {
        var uri = Navigation.Uri;
        return uri.Contains("/collaborators", StringComparison.OrdinalIgnoreCase)
            ? "active"
            : "";
    }

    private string GetConfigActiveClass()
    {
        var uri = Navigation.Uri;
        var configRoutes = new[] { "/workspaces", "/teams", "/mission-templates" };
        return configRoutes.Any(route => uri.Contains(route, StringComparison.OrdinalIgnoreCase))
            ? "active"
            : "";
    }

    private string GetMissoesActiveClass()
    {
        var uri = Navigation.Uri;
        var missoesRoutes = new[] { "/missions", "/mission-metrics" };
        return missoesRoutes.Any(route => uri.Contains(route, StringComparison.OrdinalIgnoreCase))
            ? "active"
            : "";
    }

    protected override void OnInitialized()
    {
        Navigation.LocationChanged += (s, e) => StateHasChanged();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= (s, e) => StateHasChanged();
    }
}
