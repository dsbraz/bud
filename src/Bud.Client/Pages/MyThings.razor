@page "/"
@page "/my-things"
@inject ApiClient Api
@inject AuthState AuthState
@inject NavigationManager Navigation

<div class="page-header">
    <div>
        <div class="page-kicker">Pessoal</div>
        <h1>Minhas Coisas</h1>
        <p class="page-subtitle">Missões associadas a você, sua equipe, workspace e organização.</p>
    </div>
</div>

<div class="card">
    <h2>Minhas Missões</h2>

    <div class="form-row">
        <label>Busca</label>
        <InputText class="input" @bind-Value="search" />
    </div>
    <div class="form-actions">
        <button class="button" @onclick="LoadMyMissions">Buscar</button>
    </div>

    @if (!isInitialized)
    {
        <p class="muted">Inicializando...</p>
    }
    else if (missions is null)
    {
        <p class="muted">Carregando...</p>
    }
    else if (missions.Items.Count == 0)
    {
        <p class="muted">Nenhuma missão encontrada.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Escopo</th>
                    <th>Período</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mission in missions.Items)
                {
                    <tr>
                        <td>@mission.Name</td>
                        <td>@GetMissionScopeLabel(mission)</td>
                        <td>@mission.StartDate.ToString("dd/MM/yyyy") - @mission.EndDate.ToString("dd/MM/yyyy")</td>
                        <td><span class="badge @GetStatusClass(mission.Status)">@GetStatusLabel(mission.Status)</span></td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination">
            <p class="muted">Total: @missions.Total missões</p>
            @if (missions.Total > pageSize)
            {
                <div class="pagination-controls">
                    <button class="button" @onclick="PreviousPage" disabled="@(currentPage <= 1)">Anterior</button>
                    <span>Página @currentPage de @TotalPages</span>
                    <button class="button" @onclick="NextPage" disabled="@(currentPage >= TotalPages)">Próxima</button>
                </div>
            }
        </div>
    }
</div>

@code {
    private PagedResult<Mission>? missions;
    private string? search;
    private int currentPage = 1;
    private int pageSize = 20;
    private bool isInitialized = false;

    private int TotalPages => missions is null ? 1 : (int)Math.Ceiling((double)missions.Total / pageSize);

    protected override async Task OnInitializedAsync()
    {
        await AuthState.EnsureInitializedAsync();
        isInitialized = true;
        await LoadMyMissions();
    }

    private async Task LoadMyMissions()
    {
        var collaboratorId = AuthState.Session?.CollaboratorId;
        if (!collaboratorId.HasValue)
        {
            return;
        }

        missions = null;
        missions = await Api.GetMyThingsAsync(
            collaboratorId.Value,
            search,
            currentPage,
            pageSize
        ) ?? new PagedResult<Mission>();
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadMyMissions();
        }
    }

    private async Task NextPage()
    {
        if (currentPage < TotalPages)
        {
            currentPage++;
            await LoadMyMissions();
        }
    }

    private static string GetMissionScopeLabel(Mission mission)
    {
        if (mission.CollaboratorId.HasValue) return "Pessoal";
        if (mission.TeamId.HasValue) return "Equipe";
        if (mission.WorkspaceId.HasValue) return "Workspace";
        if (mission.WorkspaceId is null && mission.TeamId is null && mission.CollaboratorId is null) return "Organização";
        return "—";
    }

    private static string GetStatusLabel(MissionStatus status) => status switch
    {
        MissionStatus.Planned => "Planejada",
        MissionStatus.Active => "Ativa",
        MissionStatus.Completed => "Concluída",
        MissionStatus.Cancelled => "Cancelada",
        _ => status.ToString()
    };

    private static string GetStatusClass(MissionStatus status) => status switch
    {
        MissionStatus.Planned => "badge-info",
        MissionStatus.Active => "badge-success",
        MissionStatus.Completed => "badge-secondary",
        MissionStatus.Cancelled => "badge-danger",
        _ => "badge-default"
    };
}
