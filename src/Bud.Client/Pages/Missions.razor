                                    </svg>
                                </button>
                                <button class="button-icon @(isDeleting ? "danger" : "")"
                                        @onclick="() => HandleDeleteClick(mission.Id)"
                                        title="@(isDeleting ? "Clique novamente para confirmar" : "Excluir miss√£o")">
                                    @if (isDeleting)
                                    {
