    private void RemoveEditTempMetric(int index)
    {
        var metric = editTempMetrics[index];
        editTempMetrics.RemoveAt(index);
        if (metric.OriginalId.HasValue)
        {
            deletedMetricIds.Add(metric.OriginalId.Value);
        }

        // Adjust editing index if needed
        if (editingEditTempMetricIndex.HasValue)
        {
            if (editingEditTempMetricIndex.Value == index)
            {
                CancelEditingEditTempMetric();
            }
            else if (editingEditTempMetricIndex.Value > index)
            {
                editingEditTempMetricIndex--;
            }
        }
    }

