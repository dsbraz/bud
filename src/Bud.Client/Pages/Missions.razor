        if (string.IsNullOrWhiteSpace(editEditTempMetricModel.Name) || string.IsNullOrEmpty(editEditTempMetricModel.TypeValue))
        {
            ToastService.ShowError("Erro de valida√ß√£o", "Informe o nome e tipo da m√©trica.");
