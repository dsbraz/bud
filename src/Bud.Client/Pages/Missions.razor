            : editEditTempMetricModel.TargetText ?? "";

        var existing = editTempMetrics[editingEditTempMetricIndex.Value];
        editTempMetrics[editingEditTempMetricIndex.Value] = new EditTempMetric(
            OriginalId: existing.OriginalId,
            editEditTempMetricModel.Name,
            editEditTempMetricModel.TypeValue,
            details,
            editEditTempMetricModel.QuantitativeTypeValue,
            editEditTempMetricModel.MinValue,
            editEditTempMetricModel.MaxValue,
            editEditTempMetricModel.TargetText,
