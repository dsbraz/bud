                    <th>Status</th>
                    <th style="width: 120px; text-align: center;">A√ß√µes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mission in missions.Items)
                {
                    var isDeleting = deletingMissionId == mission.Id;
                    var progress = missionProgress.GetValueOrDefault(mission.Id);
                    <tr>
                        <td>@mission.Name</td>
                        <td>@GetMissionScopeName(mission)</td>
                        <td>@mission.StartDate.ToString("yyyy-MM-dd") - @mission.EndDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (progress is null || progress.TotalMetrics == 0)
                            {
                                <span class="muted">‚Äî</span>
                            }
                            else
                            {
                                var statusClass = GetProgressStatusClass(progress);
                                <div class="mission-progress">
                                    <div class="progress-bar">
                                        <div class="progress-fill @statusClass" style="width: @($"{progress.OverallProgress:F0}%")"></div>
                                        @if (progress.ExpectedProgress is > 0 and < 100)
                                        {
                                            <div class="progress-expected" style="left: @($"{progress.ExpectedProgress:F0}%")"
                                                 title="Esperado: @($"{progress.ExpectedProgress:F0}%")"></div>
                                        }
                                    </div>
