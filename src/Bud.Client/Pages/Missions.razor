                <path d="M4 16H8M6 12L8 16L6 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>@GetStatusFilterLabel()</span>
        </button>
        @if (HasActiveFilters())
        {
